%h3 Создание профиля :
.container
  .row
  = form_for(@profile) do |f|
    .span5
      = f.label 'Изображение'
      = f.file_field :image
      = f.label 'Имя'
      = f.text_field :firstname
      = f.label 'Фамилия'
      = f.text_field :lastname
      %br
      = f.submit "Создать"      
    .span5
      = f.label 'О себе :'
      = f.text_area :about
